<div class="collection collection1">
	<div class="container">
		<div class="row">
			{%- for product in section.settings.collection.products limit: 6  -%}
			<div class="col-md-4">
				<div class="collection1__collection-item">
					<div class="collection1__product-img collection1__product-img--{{ section.settings.image_fit }}">
						<div class="collection1__heart"><i class="far fa-heart"></i></div>
							{%- if product.images[0] != blank -%}
							<a class="img-link" href="{ product.url }">
								<img
									srcset="{%- if product.images[0].width >= 165 -%}{{ product.images[0] | img_url: '165x' }} 165w,{%- endif -%}
									{%- if product.images[0].width >= 360 -%}{{ product.images[0] | img_url: '360x' }} 360w,{%- endif -%}
									{%- if product.images[0].width >= 535 -%}{{ product.images[0] | img_url: '535x' }} 535w,{%- endif -%}
									{%- if product.images[0].width >= 750 -%}{{ product.images[0] | img_url: '750x' }} 750w,{%- endif -%}
									{%- if product.images[0].width >= 1070 -%}{{ product.images[0] | img_url: '1070x' }} 1070w,{%- endif -%}
									{%- if product.images[0].width >= 1500 -%}{{ product.images[0] | img_url: '2000x' }} 2000w,{%- endif -%}
									{{ product.images[0] | img_url: 'master' }} {{ product.images[0].width }}w"
									src="{{ product.images[0] | img_url: '2000x' }}"
									sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
									alt="{{ product.images[0].alt | escape }}"
									loading="lazy"
									width="{{ product.images[0].width }}"
									height="{{ product.images[0].height }}"
									class="hero1__bg">
							</a>	
							{%- else -%}
							{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
							{%- endif -%}
					</div>
					<div class="collection1__product-info">
						<div class="collection1__product-details">
							{%- if section.settings.show_title == true -%}
							<span class="collection1__product-title">
								{{ product.title }}
							</span>
							{%- endif -%}
							{%- if section.settings.show_price == true -%}
							<span class="collection1__product-price">
								${{ product.price }}
							</span>
							{%- endif -%}
						</div>
						<div class="collection1__colors">
							<div class="collection1__color collection1__color--blue"></div>
							<div class="collection1__color collection1__color--grey"></div>
						</div>
					</div>
				</div>
			</div>
			{%- endfor -%}
		</div>
	</div>
</div>


<!-- Hero starts here -->
<div class="hero hero1 hero1--aligned-{{ section.settings.info_alignment }} hero1--{{ section.settings.hero_height }}">
        {%- if section.settings.image != blank -%}
          <img
            srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | img_url: '165x' }} 165w,{%- endif -%}
              {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | img_url: '360x' }} 360w,{%- endif -%}
              {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | img_url: '535x' }} 535w,{%- endif -%}
              {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | img_url: '750x' }} 750w,{%- endif -%}
              {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | img_url: '1070x' }} 1070w,{%- endif -%}
              {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | img_url: '2000x' }} 2000w,{%- endif -%}
              {{ section.settings.image | img_url: 'master' }} {{ section.settings.image.width }}w"
            src="{{ section.settings.image | img_url: '2000x' }}"
            sizes="(min-width: 1100px) 2000px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            class="hero1__bg"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      {% assign opacity = section.settings.opacity | divided_by: 100.00 %}
    <div class="hero1__content-container" style="background-color: {{ section.settings.background | color_modify: 'alpha', opacity }}">
        <div class="hero1__info">
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <h1 class="hero1__title hero1__title--{{- block.settings.title_size -}}">
              {{ block.settings.title | escape }}
              </h1>
            {%- when 'paragraph' -%}
                <p class="hero1__paragraph">
                  {{ block.settings.paragraph | escape }}
                </p>
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
              <a{% if block.settings.button_link == blank %} role="link"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="hero1__button" {{ block.shopify_attributes }}>
                {{ block.settings.button_label | escape }}
              </a>
              {%- endif -%}
          {%- endcase -%}
        {%- endfor -%}
        </div>
    </div>
</div>
<!-- Hero ends here -->




{% schema %}
{
	"name": "Collection of Products",
	"class": "spaced-section spaced-section--full-width",
	"settings": [
		{
			"type": "select",
			"id": "hero_height",
			"options": [{
					"value": "25vh",
					"label": "25%"
				},
				{
					"value": "50vh",
					"label": "50%"
				},
				{
					"value": "75vh",
					"label": "75%"
				},
				{
					"value": "100vh",
					"label": "100%"
				}
			],
			"default": "100vh",
			"label": "Height"
		},
		{
		"type": "collection",
		"id": "collection",
		"label": "Collection"
		},
		{
			"type": "select",
			"id": "image_fit",
			"options": [{
					"value": "cover",
					"label": "Cover"
				},
				{
					"value": "contain",
					"label": "Contain"
				}
			],
			"default": "contain",
			"label": "Product Image Fit"
		},
		{
			"type": "color",
			"id": "background",
			"label": "Background color",
			"default": "#000000"
		},
		{
			"type": "range",
			"id": "opacity",
			"min": 0,
			"max": 100,
			"step": 1,
			"label": "Opacity",
			"default": 50
		},
		{
			"type": "checkbox",
			"id": "show_title",
			"label": "Show Title",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "show_price",
			"label": "Show Price",
			"default": true
		},
		{
			"type": "select",
			"id": "info_alignment",
			"options": [{
					"value": "left",
					"label": "Left"
				},
				{
					"value": "center",
					"label": "Center"
				},
				{
					"value": "right",
					"label": "Right"
				}
			],
			"default": "center",
			"label": "Info Alignment"
		}
	],
	"blocks": [{
			"type": "heading",
			"name": "t:sections.image-with-text.blocks.heading.name",
			"limit": 1,
			"settings": [{
				"type": "text",
				"id": "title",
				"label": "Title",
				"default": "Title"
			},
			{
				"type": "select",
				"id": "title_size",
				"options": [{
						"value": "sm",
						"label": "Small"
					},
					{
						"value": "md",
						"label": "Medium"
					},
					{
						"value": "lg",
						"label": "Large"
					},
					{
						"value": "xl",
						"label": "Extra Large"
					}
				],
				"default": "md",
				"label": "Font Size"
			}]
		},
		{
			"type": "paragraph",
			"name": "Paragraph",
			"limit": 1,
			"settings": [{
				"type": "textarea",
				"id": "paragraph",
				"label": "Paragraph",
				"default": "Example massage I’m baby flexitarian street art pop–up tbh brunch,  fam kombucha. Umami succulents adaptogen, sriracha kinfolk four dollar toast ramps aesthetic 3 wolf moon migas"
			}]
		},
		{
			"type": "button",
			"name": "t:sections.image-with-text.blocks.button.name",
			"limit": 1,
			"settings": [{
					"type": "text",
					"id": "button_label",
					"default": "Button label",
					"label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
					"info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
				},
				{
					"type": "url",
					"id": "button_link",
					"label": "Link"
				}
			]
		}
	],
	"presets": [{
		"name": "Collection of Products",
		"blocks": [{
				"type": "heading"
			},
			{
				"type": "paragraph"
			},
			{
				"type": "button"
			}
		]
	}]
}
{% endschema %}
